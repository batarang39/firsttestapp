<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="firsttestapp.EmployeeDetails"
             Title="Employee Details">
 
        <ScrollView BackgroundColor="{StaticResource Primary}">
            <Frame BackgroundColor="{StaticResource Secondary}" Padding="10" Margin="20">
                <StackLayout>
                    <!-- Display Student Details Here -->
                    <Label Text="{Binding FirstName}" />
                    <Label Text="{Binding Surname}" />
                    <Label Text="{Binding Phone}" />
                    <Label Text="{Binding Department}" />
                    <Label Text="{Binding Street}" />
                    <Label Text="{Binding City}" />
                    <Label Text="{Binding State}" />
                    <Label Text="{Binding ZipCode}" />
                    <Label Text="{Binding Country}" />
                    <Label Text="{Binding EnrollmentDate}" />

                    <!-- Add any other details you want to display -->
                </StackLayout>
            </Frame>
        </ScrollView>
</ContentPage>