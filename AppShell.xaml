<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="firsttestapp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:firsttestapp"
    Shell.FlyoutBehavior="Flyout">
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="SettingsPage"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />
    <ShellContent
        Title="StaffList"
        ContentTemplate="{DataTemplate local:StaffList}"
        Route="StaffList" />

</Shell>


